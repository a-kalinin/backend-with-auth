{
    "name": "backend",
    "version": "1.0.0",
    "exports": "./dist/src/index.js",
    "type": "module",
    "scripts": {
        "start": "concurrently \"nodemon --config nodemon.tsoa.json\" \"nodemon src/server.ts\"",
        "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
        "test::watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
        "migration::generate": "typeorm-ts-node-esm migration:generate -d src/db/AppDataSource.ts src/db/migrations/migration",
        "migration::run": "typeorm-ts-node-esm migration:run -d src/db/AppDataSource.ts",
        "docker::build": "docker-compose build",
        "docker::run": "docker-compose up -d",
        "docker::run-db-only": "docker-compose -f docker-compose.db-only.yml up -d",
        "docker::prod-run": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up -d",
        "docker::stop": "docker-compose down",
        "build": "tsoa spec-and-routes && tsc -p .",
        "run::dist": "cross-env NODE_ENV=development NODE_PATH=./dist node --experimental-specifier-resolution=node dist/src/server.js",
        "run::prod": "cross-env NODE_ENV=production NODE_PATH=./dist node --experimental-specifier-resolution=node dist/src/server.js",
        "lint": "eslint . --ext .ts,.js"
    },
    "dependencies": {
        "@tsconfig/node18": "^1.0.1",
        "@typescript-eslint/eslint-plugin": "^5.30.7",
        "@typescript-eslint/parser": "^5.30.7",
        "connect-typeorm": "^2.0.0",
        "dotenv": "^16.0.1",
        "express": "^4.18.1",
        "express-session": "^1.17.3",
        "glob": "^8.0.3",
        "helmet": "^5.1.1",
        "jsonwebtoken": "^8.5.1",
        "nodemailer": "^6.7.7",
        "pg": "^8.7.3",
        "reflect-metadata": "^0.1.13",
        "swagger-ui-express": "^4.5.0",
        "tsoa": "^4.1.1",
        "typeorm": "^0.3.7",
        "typescript": "^4.7.4"
    },
    "devDependencies": {
        "@babel/plugin-transform-modules-commonjs": "^7.18.6",
        "@babel/preset-typescript": "^7.18.6",
        "@types/express": "^4.17.13",
        "@types/glob": "^7.2.0",
        "@types/jest": "^28.1.6",
        "@types/jsonwebtoken": "^8.5.8",
        "@types/node": "^18.0.6",
        "@types/supertest": "^2.0.12",
        "babel-cli": "^6.26.0",
        "babel-preset-env": "^1.7.0",
        "concurrently": "^7.3.0",
        "cross-env": "^7.0.3",
        "eslint": "^8.20.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jest": "^26.6.0",
        "jest": "^28.1.3",
        "nodemon": "^2.0.19",
        "superagent": "^8.0.0",
        "supertest": "^6.2.4",
        "ts-jest": "^28.0.7",
        "ts-node": "^10.9.1"
    }
}
